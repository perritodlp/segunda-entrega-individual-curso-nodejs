{{>header}}

    <h1 class="text-center">Virtual EduCali</h1>
    <p class="lead text-center">Registro en la plataforma.</p>

    <div class="row">
        <div class="col"></div>
        <div class="col-md-6">
            <div id="error-group">{{errorsMessageHelper errors}}</div>

            <form action="/signup" method="POST">
                <div class="form-row">{{alertMessageHelper response}}</div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="identificationNumber">Documento de identidad</label>
                        <input type="number" class="form-control" id="identificationNumber" name="identificationNumber" value="{{req.body.identificationNumber}}" placeholder="Número de identificador">
                    </div>
                </div> 
                <div class="form-row">   
                    <div class="form-group col-md-12">
                        <label for="name">Nombre</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{req.body.name}}" placeholder="Nombre">
                    </div>
                </div>            
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="email">Correo electrónico</label>
                        <input type="text" class="form-control" id="email" name="email" value="{{req.body.email}}" placeholder="Correo electrónico">
                    </div>
                </div> 
                <div class="form-row">                
                    <div class="form-group col-md-12">
                        <label for="phone">Teléfono</label>
                        <input type="number" class="form-control" id="phone" name="phone" value="{{req.body.phone}}" placeholder="Teléfono">
                    </div>
                </div>

                <button class="btn btn-lg btn-primary" id="register-btn" role="button">Registrarse</button>             
            </form>
        </div>
        <div class="col"></div> 
    </div>

{{>footer}}